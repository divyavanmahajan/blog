---
const { siteTitle = "Divya van Mahajan" } = Astro.props;
---

<header class="site-header">
    <div class="header-top container">
        <h1 class="site-title">
            <a href={import.meta.env.BASE_URL}>{siteTitle}</a>
        </h1>
        <p class="site-subtitle">
            Personal notebook about things I've learned.
        </p>
    </div>

    <nav class="main-nav">
        <div class="container">
            <ul class="menu">
                <li><a href={import.meta.env.BASE_URL}>Home</a></li>
                <li>
                    <a href={import.meta.env.BASE_URL + "categories"}
                        >Categories</a
                    >
                </li>
                <li><a href={import.meta.env.BASE_URL + "tags"}>Tags</a></li>
                <li><a href={import.meta.env.BASE_URL + "about"}>About</a></li>
            </ul>
        </div>
    </nav>
</header>

<style>
    .site-header {
        background: var(--color-surface);
        margin-bottom: 2rem;
    }

    .header-top {
        padding: 2rem 1rem;
    }

    .site-title {
        font-family: var(--font-title);
        font-weight: var(--weight-title);
        font-size: 2.5rem;
        margin: 0;
        line-height: 1.1;
    }

    .site-title a {
        color: #000;
        text-decoration: none;
    }

    .site-subtitle {
        color: var(--color-text-light);
        margin: 0.5rem 0 0;
        font-size: 0.9rem;
    }

    .main-nav {
        background-color: var(--color-secondary);
        color: #fff;
    }

    .menu {
        list-style: none;
        margin: 0;
        padding: 0;
        display: flex;
        flex-wrap: wrap;
    }

    .menu li a {
        display: block;
        padding: 1rem 1.5rem;
        color: #fff;
        text-decoration: none;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.9rem;
        border-bottom: 3px solid transparent;
        transition: all 0.2s;
    }

    .menu li a:hover {
        background-color: #333;
        border-bottom-color: var(--color-primary);
    }

    @media (max-width: 768px) {
        .site-title {
            font-size: 1.8rem; /* Smaller title for mobile */
            word-wrap: break-word; /* Ensure title wraps if still too long */
        }

        .header-top {
            padding: 1.5rem 1rem;
        }

        .menu li a {
            padding: 0.8rem 1rem; /* Smaller nav items */
            font-size: 0.8rem;
        }
    }
</style>
