---
const { siteTitle = "Divya van Mahajan" } = Astro.props;
---

<header class="site-header">
    <div class="header-top container">
        <h1 class="site-title">
            <a href={import.meta.env.BASE_URL}>{siteTitle}</a>
        </h1>
    </div>

    <div class="menu-bar">
        <div class="container">
            <button
                id="menu-toggle"
                class="menu-toggle"
                aria-label="Toggle Menu"
            >
                <span class="menu-text">Menu</span>
            </button>
        </div>
    </div>

    <nav class="main-nav" id="main-nav">
        <div class="container">
            <ul class="menu">
                <li><a href={import.meta.env.BASE_URL}>Home</a></li>
                <li>
                    <a href={import.meta.env.BASE_URL + "categories"}
                        >Categories</a
                    >
                </li>
                <li>
                    <a href={import.meta.env.BASE_URL + "series"}>Series</a>
                </li>
                <li><a href={import.meta.env.BASE_URL + "tags"}>Tags</a></li>
                <li><a href={import.meta.env.BASE_URL + "til"}>TIL</a></li>
                <li><a href={import.meta.env.BASE_URL + "about"}>About</a></li>
            </ul>
        </div>
    </nav>
</header>

<script>
    const menuToggle = document.getElementById("menu-toggle");
    const mainNav = document.getElementById("main-nav");

    if (menuToggle && mainNav) {
        menuToggle.addEventListener("click", () => {
            mainNav.classList.toggle("is-open");
            menuToggle.classList.toggle("is-active");
        });
    }
</script>

<style>
    .site-header {
        background: var(--color-surface);
        margin-bottom: 1rem;
        position: relative;
    }

    .header-top {
        padding: 1rem 1rem;
    }

    .site-title {
        font-family: var(--font-title);
        font-weight: var(--weight-title);
        font-size: 2.5rem;
        margin: 0;
        line-height: 1.1;
    }

    .site-title a {
        color: #000;
        text-decoration: none;
    }

    .site-subtitle {
        color: var(--color-text-light);
        margin: 0.5rem 0 0;
        font-size: 0.9rem;
    }

    .main-nav {
        background-color: var(--color-secondary);
        color: #fff;
    }

    .menu {
        list-style: none;
        margin: 0;
        padding: 0;
        display: flex;
        flex-wrap: wrap;
    }

    .menu li a {
        display: block;
        padding: 0.75rem 1.25rem;
        color: #fff;
        text-decoration: none;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.9rem;
        border-bottom: 3px solid transparent;
        transition: all 0.2s;
    }

    .menu li a:hover {
        background-color: #333;
        border-bottom-color: var(--color-primary);
    }

    .menu-text {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.9rem;
    }

    .menu-bar {
        display: none;
    }

    @media (max-width: 768px) {
        .site-header {
            margin-bottom: 0.5rem;
        }

        .header-top {
            padding: 1rem 1rem 0.5rem;
            text-align: center;
            display: block;
        }

        .menu-bar {
            display: block;
            background-color: var(--color-secondary);
            margin-top: 0.5rem;
            padding: 0.25rem 0;
        }

        .menu-toggle {
            display: flex;
            width: 100%;
            justify-content: flex-start;
            background: none;
            border: none;
            cursor: pointer;
            color: #fff;
            padding: 0.5rem 0;
        }

        .site-title {
            font-size: 1.5rem; /* Slightly larger for better branding */
            font-weight: 600;
        }

        .site-subtitle {
            display: none;
        }

        .main-nav {
            display: none;
            position: absolute;
            width: 100%;
            z-index: 100;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .main-nav.is-open {
            display: block;
        }

        .menu {
            flex-direction: column;
        }

        .menu li a {
            padding: 0.75rem 1rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }
    }
</style>
