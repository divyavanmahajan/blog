---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
    const allPosts = await getCollection("blog");
    const uniqueSeries = [
        ...new Set(
            allPosts
                .filter((post) => post.data.series)
                .map((post) => post.data.series.split("-")[0].toLowerCase()),
        ),
    ];

    return uniqueSeries.map((series) => {
        const filteredPosts = allPosts
            .filter(
                (post) =>
                    post.data.series &&
                    post.data.series.toLowerCase().startsWith(series + "-"),
            )
            .map((post) => ({
                ...post,
                sequence: parseInt(post.data.series.split("-")[1] || "0"),
            }))
            .sort((a, b) => b.sequence - a.sequence);

        return {
            params: { series },
            props: { posts: filteredPosts, seriesId: series },
        };
    });
}

const { seriesId, posts } = Astro.props;
const { BASE_URL } = import.meta.env;
const seriesName = seriesId.replace(/[-_]/g, " ");
---

<BaseLayout title={`Series: ${seriesName} | Astro Blog`}>
    <header class="page-header">
        <h1>Series: <span>{seriesName}</span></h1>
        <p class="series-meta">{posts.length} parts in this series</p>
    </header>

    <section class="post-list">
        {
            posts.map((post) => (
                <article class="post-entry">
                    <header class="entry-header">
                        <div class="entry-sequence">
                            Part {post.data.series.split("-")[1]}
                        </div>
                        <h2 class="entry-title">
                            <a href={`${BASE_URL}posts/${post.slug}/`}>
                                {post.data.title}
                            </a>
                        </h2>
                        <div class="entry-meta">
                            <span class="posted-on">
                                <time
                                    datetime={post.data.pubDate.toISOString()}
                                >
                                    {post.data.pubDate.toLocaleDateString(
                                        "en-us",
                                        {
                                            year: "numeric",
                                            month: "long",
                                            day: "numeric",
                                        },
                                    )}
                                </time>
                            </span>
                            &bull;
                            <span class="byline">
                                {" "}
                                {post.data.author || "Author"}
                            </span>
                        </div>
                    </header>

                    <div class="entry-content">
                        <p>{post.data.description}</p>
                    </div>

                    <footer class="entry-footer">
                        <a
                            href={`${BASE_URL}posts/${post.slug}/`}
                            class="read-more"
                        >
                            Read more...
                        </a>
                    </footer>
                </article>
            ))
        }
    </section>
</BaseLayout>

<style>
    .page-header {
        margin-bottom: 2rem;
        background: #fff;
        padding: 1rem 2rem;
        border: 1px solid var(--color-border);
    }
    .page-header h1 {
        margin: 0;
        text-transform: capitalize;
    }
    .page-header span {
        color: var(--color-primary);
    }

    .series-meta {
        color: var(--color-text-light);
        margin: 0.5rem 0 0;
        font-size: 0.9rem;
        font-weight: 600;
        text-transform: uppercase;
    }

    .post-entry {
        margin-bottom: 2rem;
        background: #fff;
        padding: 2rem;
        border: 1px solid var(--color-border);
    }

    .entry-sequence {
        color: var(--color-primary);
        font-weight: 700;
        font-size: 0.8rem;
        text-transform: uppercase;
        margin-bottom: 0.25rem;
    }

    .entry-title {
        font-size: 1.75rem;
        margin-bottom: 0.5rem;
    }

    .entry-title a {
        color: var(--color-text);
        text-decoration: none;
    }

    .entry-title a:hover {
        color: var(--color-primary);
    }

    .entry-meta {
        color: var(--color-text-light);
        font-size: 0.85rem;
        margin-bottom: 1rem;
        text-transform: uppercase;
    }

    .entry-footer {
        margin-top: 1.5rem;
    }

    .read-more {
        background: var(--color-primary);
        color: #fff;
        padding: 0.5rem 1rem;
        font-weight: 600;
        border-radius: 2px;
        font-size: 0.9rem;
    }

    .read-more:hover {
        background: #cc292b;
        text-decoration: none;
    }

    @media (max-width: 768px) {
        .page-header {
            padding: 1rem;
        }
        .post-entry {
            padding: 1.5rem;
        }
    }
</style>
