---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import TableOfContents from '../../components/TableOfContents.astro';
import SeriesNav from '../../components/SeriesNav.astro';

export async function getStaticPaths() {
	const posts = await getCollection('blog');
	return posts.map((post) => ({
		params: { slug: post.slug },
		props: post,
	}));
}

const post = Astro.props;
const { Content, headings } = await post.render();
---

<BaseLayout title={post.data.title} description={post.data.description}>
	<article class="post-single">
        <header class="post-header">
            <h1 class="post-title">{post.data.title}</h1>
            <div class="post-meta">
                <time datetime={post.data.pubDate.toISOString()}>
                    {post.data.pubDate.toLocaleDateString('en-us', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric',
                    })}
                </time>
                &bull; 
                <span>{post.data.author || 'Divya van Mahajan'}</span>
            </div>
        </header>

        {post.data.heroImage && (
            <div class="post-hero">
                <img src={post.data.heroImage} alt={post.data.title} />
            </div>
        )}

        <SeriesNav currentSeries={post.data.series} currentSlug={post.slug} />

        <TableOfContents headings={headings} />

        <div class="post-content">
            <Content />
        </div>

        <footer class="post-footer">
            <SeriesNav currentSeries={post.data.series} currentSlug={post.slug} />

            <div class="post-tags">
                Tags: 
                {post.data.tags.map(tag => (
                   <a href={`${import.meta.env.BASE_URL}tags/${tag}`}>{tag}</a> 
                ))}
            </div>
        </footer>
    </article>
</BaseLayout>

<style>
    .post-single {
        background: #fff;
        padding: 2rem; /* Using padding to simulate the 'card' look */
        border: 1px solid var(--color-border);
    }

    .post-title {
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
    }

        border-bottom: 1px solid #eee;
        padding-bottom: 1rem;
    }

    .post-content {
        font-size: 1.1rem;
        line-height: 1.8;
        overflow-wrap: break-word; /* Ensure text wraps */
        word-wrap: break-word; /* Legacy support */
    }

    @media (max-width: 768px) {
        .post-single {
            padding: 1.25rem; /* Reduced padding on mobile */
        }
        
        .post-title {
            font-size: 2rem; /* Smaller title on mobile */
        }
    }

    /* Markdown content styles */
    .post-content :global(h2),
    .post-content :global(h3) {
        margin-top: 2rem;
        margin-bottom: 0.75rem;
    }

    .post-content :global(p) {
        margin-bottom: 1.5rem;
    }

    .post-hero {
        margin-bottom: 2rem;
    }

    .post-hero img {
        width: 100%;
        max-height: 400px;
        object-fit: cover;
        border-radius: 8px;
    }
    
    @media (max-width: 768px) {
        .post-single {
            padding: 0.5rem; /* Drastic reduction to match container padding */
            border: none; /* Cleaner look on small screens */
        }
        
        .post-title {
            font-size: 1.5rem;
            margin-bottom: 0.5rem;
        }

        .post-hero {
            margin-bottom: 1rem;
        }

        .post-hero img {
            max-height: 240px; /* Reduced as requested */
        }

        .post-content {
            font-size: 1rem;
        }

        .post-content :global(h2),
        .post-content :global(h3) {
            margin-top: 1.25rem;
            margin-bottom: 0.5rem;
            font-size: 1.1rem; /* Slightly larger than body text */
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .post-content :global(p) {
            margin-bottom: 0.75rem; /* Reduced spacing */
        }

        /* Ensure pre/code doesn't stretch */
        .post-content :global(pre),
        .post-content :global(code) {
            max-width: 100%;
            overflow-x: auto;
            word-wrap: normal;
        }
    }

    .post-content :global(a) {
        text-decoration: underline;
    }

    .post-tags {
        margin-top: 3rem;
        padding-top: 1rem;
        border-top: 1px solid #eee;
        font-weight: bold;
    }

    .post-tags a {
        background: #eee;
        padding: 0.2rem 0.5rem;
        margin-left: 0.5rem;
        font-weight: normal;
        color: #333;
        font-size: 0.9rem;
        text-decoration: none;
    }
</style>
